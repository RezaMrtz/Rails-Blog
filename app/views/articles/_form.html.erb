<%= form_with(model: article, local: true) do |form| %>
<% if article.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul class="is-danger">
        <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="field">
    <%= form.label :title, class:"label" %>
    <%= form.text_field :title, class:"input", type:"text", placeholder:"Text input" %>
</div>

<div class="field">
    <%= form.label :body, class: "label"%>
    <%= form.text_area :body, class:"textarea is-rounded", placeholder:"e.g. Hello world" %>
</div>

<div class="field is-horizontal">
    <label class="checkbox">
        <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: "checkboc-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text}%>
        <% end %>
    </label>
</div>

<div class="field is-grouped">
    <%= form.submit class:"button is-primary" %>
</div>

<% end %>